@model SV21T1020578.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/SaveData" method="post">

            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên khách hàng: @Html.ValidationMessageFor(m => m.SupplierName)</label>
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", autofocus = "autofocus" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch: @Html.ValidationMessageFor(m => m.ContactName)</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Email: @Html.ValidationMessageFor(m => m.Email)</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Tỉnh/thành: @Html.ValidationMessageFor(m => m.Province)</label>
                @Html.DropDownListFor(m => m.Province, SelectListHeper.Provinces(), new { @class = "select2" })
                @* <select class="form-control" name="@nameof(Model.Province)" >
                    <option value="">-- Chọn Tỉnh/thành</option>
                    @foreach (var Province in SV21T1020578.BusinessLayers.CommonDataService.ProvinceDB.List())
                    {
                        if (Model.Province == Province.ProvinceName)
                        {
                            <option value="@Province.ProvinceName" selected>@Province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@Province.ProvinceName">@Province.ProvinceName</option>
                        }
                    }
                    
                </select> *@
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
