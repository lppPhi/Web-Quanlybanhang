@model SV21T1020578.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/SaveData" method="post">

            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId" />

            <div class="form-group">
                <label for="CustomerName">Tên khách hàng: @Html.ValidationMessageFor(m => m.CustomerName)</label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", autofocus = "autofocus" })
                
            </div>


            <div class="form-group">
                <label>Tên giao dịch: @Html.ValidationMessageFor(m => m.ContactName)</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })

            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
             </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.IsLocked) Khóa tài khoản khách hàng
                </label>
            </div>

            <div class="form-group">
                <label>Email: @Html.ValidationMessageFor(m => m.Email)</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Email)" value="@Model.Email" />
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)" value="@Model.Address" />
            </div>

            <div class="form-group">
                <label>Tỉnh/thành: @Html.ValidationMessageFor(m => m.Province)</label>
                @Html.DropDownListFor(m => m.Province, SelectListHeper.Provinces(), new { @class = "select2" })
                @* <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">-- Chọn Tỉnh/thành</option>
                    @foreach (var Province in SV21T1020578.BusinessLayers.CommonDataService.ProvinceDB.List())
                    {
                        if (Model.Province == Province.ProvinceName)
                        {
                            <option value="@Province.ProvinceName" selected>@Province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@Province.ProvinceName">@Province.ProvinceName</option>
                        }
                    }
                </select> *@
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.IsLocked) Khóa tài khoản khách hàng
                    </label>
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>